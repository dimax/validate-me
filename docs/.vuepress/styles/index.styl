.home .hero img {
  max-height: 128px !important;
}
#main-title {
  display: none;
}
.site-name.can-hide {
  display: none;
}

.example-pages {
  height: 100vh;

  .content {
    max-width: initial;
    padding: 1rem;
    height: calc(100vh - 5em);
  }
  .sidebar {
    width: 6em;
  }
  .page {
    padding: 0 0 0 6em;
    height: 100vh;
  }
  .page-edit {
    display: none;
  }

  iframe {
    width: 100%;
    height: 100%;
    border: 0;
    border-radius: 4px;
    overflow: hidden;
  }
}
