{
  "name": "validate-me",
  "description": "Dynamic validation lib for hydrating server errors",
  "main": "index.js",
  "repository": "https://github.com/lgraziani2712/validate-me",
  "homepage": "https://lgraziani2712.github.io/validate-me/",
  "author": "Luciano Graziani @lgraziani2712",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "playgrounds/*"
  ],
  "keywords": [
    "validation",
    "server",
    "blazing",
    "fast",
    "rule",
    "react",
    "vue",
    "vanilla"
  ],
  "scripts": {
    "check:lint": "eslint \"docs/.vuepress/**/*\" packages playgrounds .eslintrc.js --cache",
    "check:prettify": "prettier \".circleci/**/*\" \"docs/**/*\" \"packages/**/*\" \"playgrounds/**/*\" \"./**/*.json\" -c",
    "lint": "eslint \"docs/.vuepress/**/*\" packages playgrounds .eslintrc.js --cache --fix",
    "prettify": "prettier \".circleci/**/*\" \"docs/**/*\" \"packages/**/*\" \"playgrounds/**/*\" \"./**/*.json\" -c --write",
    "build:docs": "vuepress build docs",
    "start:docs": "vuepress dev docs"
  },
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@babel/preset-react": "7.0.0",
    "@dimax-ar/eslint-config-dimax": "3.2.0",
    "@types/react": "16.8.13",
    "babel-loader": "8.0.5",
    "babel-plugin-jsx-remove-data-test-id": "2.0.0",
    "babel-plugin-remove-test-ids": "1.1.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "babel-plugin-transform-vue-props": "1.0.0",
    "bundlesize": "0.17.1",
    "cache-loader": "2.0.1",
    "clean-webpack-plugin": "2.0.1",
    "cross-env": "5.2.0",
    "css-loader": "2.1.1",
    "cypress": "3.2.0",
    "eslint": "5.16.0",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.6.0",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lerna": "3.13.2",
    "lint-staged": "8.1.5",
    "node-sass": "4.11.0",
    "prettier": "1.16.4",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "vue": "2.6.10",
    "vue-loader": "15.7.0",
    "vue-server-renderer": "2.6.10",
    "vue-template-compiler": "2.6.10",
    "vue-types": "1.5.3",
    "vuepress": "1.0.0-alpha.47",
    "webpack": "4.29.6",
    "webpack-bundle-analyzer": "3.2.0",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.3.1"
  },
  "bundlesize": [
    {
      "path": "packages/**!(dictionaries|rules)/!(.eslintrc).js",
      "maxSize": "1.3 kb"
    },
    {
      "path": "dist/[a-z]*.js",
      "maxSize": "3.5 kb"
    }
  ]
}
